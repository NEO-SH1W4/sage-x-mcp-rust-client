# Documentation files
include README.md
include CHANGELOG.md
include LICENSE
include CONTRIBUTING.md
recursive-include docs *.md
recursive-include docs *.rst

# Configuration files
include Cargo.toml
include Cargo.lock
include .gitignore

# Source code
recursive-include src *.rs
recursive-include examples *.rs
recursive-include tests *.rs
recursive-include benches *.rs

# GitHub workflows and templates
recursive-include .github *.yml
recursive-include .github *.yaml
recursive-include .github *.md

# Scripts
recursive-include scripts *.sh
recursive-include scripts *.ps1
recursive-include scripts *.bat

# Exclude build artifacts
global-exclude target/*
global-exclude Cargo.lock.bak
global-exclude *.orig
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude *~

